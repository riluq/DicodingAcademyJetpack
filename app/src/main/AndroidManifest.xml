<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.riluq.dicodingacademyjetpack">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity
                android:name="com.riluq.dicodingacademyjetpack.detail.DetailCourseActivity"
                android:label="@string/title_activity_detail_course"
                android:parentActivityName="com.riluq.dicodingacademyjetpack.home.HomeActivity"
                android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="com.riluq.dicodingacademyjetpack.home.HomeActivity"/>
        </activity>
        <activity android:name="com.riluq.dicodingacademyjetpack.reader.CourseReaderActivity">
        </activity>
        <activity
                android:name="com.riluq.dicodingacademyjetpack.home.HomeActivity"
                android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
    </application>

</manifest>